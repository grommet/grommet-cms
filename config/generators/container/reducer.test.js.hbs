import * as T from '../constants';
import {{ camelCase name }}Reducer, { initialState } from '../reducer';

describe('{{ camelCase name }}Reducer', () => {
  it('should return the initial state', () => {
    expect(
      {{ camelCase name }}Reducer(undefined, {})
    ).toEqual(initialState);
  });
  it('should handle reducer for action LOAD_DATA_INITIATION', () => {
    const stateBefore = {
      isLoading: false
    };
    const stateAfter = {
      isLoading: true
    };
    expect(
      {{ camelCase name }}Reducer(stateBefore, {
        type: T.LOAD_DATA_INITIATION
      })
    ).toEqual(stateAfter);
  });
  it('should handle reducer for action LOAD_DATA_SUCCESS', () => {
    const stateBefore = {
      isLoading: true
    };
    const stateAfter = {
      isLoading: false
    };
    expect(
      {{ camelCase name }}Reducer(stateBefore, {
        type: T.LOAD_DATA_SUCCESS
      })
    ).toEqual(stateAfter);
  });
  it('should handle reducer for action LOAD_DATA_FAILURE', () => {
    const error = new Error('Ooops');
    const stateBefore = {
      isLoading: true,
      error: null
    };
    const stateAfter = {
      isLoading: true,
      error
    };
    expect(
      {{ camelCase name }}Reducer(stateBefore, {
        type: T.LOAD_DATA_FAILURE,
        error
      })
    ).toEqual(stateAfter);
  });
});
